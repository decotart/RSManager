<Window x:Class="RSManager.Windows.TextBoxWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RSManager.Windows"
        mc:Ignorable="d"
        Title="TextBoxWindow" Height="300" Width="400" WindowStartupLocation="CenterScreen">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBox Height="150"
                 Width="370"
                 x:Name="tbValue"
                 BorderThickness="3"
                 BorderBrush="Pink"
                 FontSize="15"
                 FontFamily="Bookman Old Style" 
                 FontWeight="Bold"/>

        <Button Grid.Row="1"
                BorderThickness="3"
                BorderBrush="Pink"
                FontSize="15"
                FontFamily="Bookman Old Style" 
                FontWeight="Bold"
                Background="White"
                Height="50"
                Width="370"
                Content="Готово"
                Click="btnDone_Click"/>

    </Grid>
</Window>
